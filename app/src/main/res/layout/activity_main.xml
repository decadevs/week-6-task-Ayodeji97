<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_form_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!-- header wrapper-->
    <LinearLayout
        android:id="@+id/heading_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvRegisterHeadingTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Register"
            android:textColor="@color/blackColor"
            android:textSize="15sp" />
    </LinearLayout>

    <!--    Form Wrap Layout-->
    <LinearLayout
        android:id="@+id/form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Registration header text-->
        <TextView
            android:id="@+id/tvRegistrationHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Registration Form"
            android:textColor="@color/blackColor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Input text for full name-->

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_person_identy"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor" />

<!--        input text for user name-->
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="User name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor" />

<!--        input text  for phone number-->

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor" />

        <!-- input text for email-->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_email_outline"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor" />

<!--        input text for password-->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor" />


        <!--Radio group for gender-->

        <Spinner
            android:id="@+id/spGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/Sex"
            android:focusable="auto"
            android:nestedScrollingEnabled="true"
            android:backgroundTint="#FFFFFF"
            android:popupBackground="#364751"
            android:layout_marginTop="10dp"/>


        <!--Registration Button-->
        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/register_btn"
            android:elevation="5dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor" />

        <!--        Term and condition text view-->
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="By clicking 'Register' You agree\n    to our terms and conditions"
            android:textColor="@color/fullColor" />


    </LinearLayout>


</LinearLayout>