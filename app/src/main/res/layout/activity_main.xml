<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    android:padding="10dp"
    android:id="@+id/parent_form_activity"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/heading_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

<!--        <ImageView-->
<!--            android:id="@+id/ivImage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_back_arrow"-->
<!--            />-->
        <TextView
            android:id="@+id/tvRegisterHeadingTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:gravity="end"
            android:textColor="@color/blackColor"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvRegistrationHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Form"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blackColor"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Full Name"
            android:drawableLeft="@drawable/ic_person_identy"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor"
            android:inputType="textPersonName"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="User name"
            android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor"
            android:inputType="textPersonName"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor"
            android:inputType="phone"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email_outline"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor"
            android:inputType="textEmailAddress"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/fullColor"
            android:inputType="textPassword"
            android:elevation="5dp"
            android:background="@drawable/btn"
            />





        <RadioGroup
            android:id="@+id/rgGenderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/blackColor"/>

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="true"
                android:buttonTint="@color/greenColor"
                android:textColor="@color/blackColor"/>
        </RadioGroup>





        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Register"
            android:textColor="@color/whiteColor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:background="@drawable/register_btn"
            />
        
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="By clicking 'Register' You agree\n    to our terms and conditions"
            android:layout_marginTop="25dp"
            android:textColor="@color/fullColor"/>


    </LinearLayout>



</LinearLayout>